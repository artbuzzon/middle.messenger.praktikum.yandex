{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "typeRoots" : ["./node_modules/@types", "./typings", "./src/types.d.ts"]
  },
  "include": ["src/**/*", "test/*.spec.ts"],
  "exclude": [
    "node_modules"
  ]
}
