{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src"],
      "utils/*": ["src/utils/*"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"],
      "store/*": ["src/store/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "include": [
    "src/**/*",
    "test/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
